- title = @client.full_name
- content_for :title, title
= render 'clients/breadcrumbs'

.o-page
  .o-page__header
    = render 'clients/aliases'
  = render 'clients/tab_navigation', current: client_path(@client)
  - if can_access_some_version_of_clients?
    %section.o-dashboard__block--primary.client__summary
      = render 'client_access_control/clients/client_summary'
  - if can_view_full_client_dashboard?
    = render 'client_access_control/clients/rollups'
  - elsif can_view_limited_client_dashboard?
    = render 'client_access_control/clients/rollups_limited'

  #scratchpad

= render 'client_access_control/clients/client_rollup_js'
