%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    :css
      .l-print__header {
        display: block;
        width: 100%;
        box-sizing: border-box;
        background: none;
        margin: 0;
        padding: 0px 10px;
        overflow: hidden;
      }
      .l-print__header {
        font-size: 12px;
        font-family: sans-serif;
        margin-top: 10px;
        margin-bottom: 20px;
        color: #091F2F;
      }
      .l-print__header__title {
        font-weight: 700;
        margin-bottom: 4px;
        font-size: 12px;
        color: #091F2F;
      }
      .l-print__header__details {
        width: 100%;
        margin: 10px 0px;
        margin-bottom: 20px;
      }
      .l-print__header__detail {
        display: inline-block;
        font-size: 9px;
        color: rgba(0, 0, 0, 0.80);
        margin-right: 40px;
      }
      .l-print__header__detail-label {
        font-weight: 700;
      }

  %body
