- hint = hint || nil
- input_html = input_html || {}
- controlled = controlled || nil
%div
  - if collection.present?
    - if collection.values.include?('other')
      - input_html = input_html.deep_merge(class: 'jWithOther')
      .well.jSelectPair{class: controlled}
        - if hint.present?
          %h5= label
          - label = hint
        = f.input key, as: kind, collection: collection, label: label, input_html: input_html
        = f.input "#{key}_other", label: 'Please specify:', wrapper_html: { class: :jOther }
    - else
      %div{class: controlled}
        - if hint.present?
          %h5= label
          - label = hint
        = f.input key, as: kind, collection: collection, label: label, input_html: input_html
  - else
    %div{class: controlled}
      - if hint.present?
        %h5= label
        - label = hint
      = f.input key, as: kind, label: label, input_html: input_html
