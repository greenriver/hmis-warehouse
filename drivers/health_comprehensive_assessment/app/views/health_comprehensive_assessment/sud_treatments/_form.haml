      = f.input :service_type, as: :text, label: 'Type of Service', input_html: {rows: 5}
    .col-4
      = f.input :service_dates, as: :text, input_html: {rows: 5}, label: 'Dates of Service'
    .col-4
      = f.input :reason, as: :text, input_html: {rows: 5}, label: 'Reason'
