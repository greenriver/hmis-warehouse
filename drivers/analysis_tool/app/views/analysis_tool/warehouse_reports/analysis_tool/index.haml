:ruby
  @layout__plain_inner = true
  @layout__width = 'lg'

- title = _('Analysis Tool')
- content_for :title, title
.content-outer-prs1
  %nav.nav-drawer.prs1
    = render 'filters/filter_controls/sidebar'
  .main-outer-prs1
    .utility-prs1
      = render '/warehouse_reports/breadcrumbs', tab: 'operational'
      = render 'utility'
    .top-nav-prs1
      %h1.mb-5= title
      .mb-4= render 'hero_counts'
    .main-inner-prs1
      %p.mt-2.mb-4
        Choose a universe and two categories.  This report will show how many people are in each category cross-section.
      .d-flex
        .mr-4= render 'disaggregation_picker'
        .ml-auto.mb-4
          = render 'report_downloads/report_download', export: nil, excel_download_path: analysis_tool_warehouse_reports_analysis_tool_index_path({format: :xlsx}.merge(link_params))
      -# = render 'table'
      = render 'background_render', url: render_section_analysis_tool_warehouse_reports_analysis_tool_index_path, fetch_params: {partial: 'table', filters: @filter.for_params[:filters], row_breakdown: breakdowns[:row], col_breakdown: breakdowns[:col] } do
        .rollup
          .rollup-container.well
      = render 'common/section_not_loading', path_to_section: section_analysis_tool_warehouse_reports_analysis_tool_index_path(partial: 'table', filters: @filter.for_params[:filters], row_breakdown: breakdowns[:row], col_breakdown: breakdowns[:col])
