- goal_config = @report.goal_config
-# !important for print -- bootstrap has an !important style that for some reason overrides inline styles
- background_color = if goal_config.present? then "background-color: #{goal_config.color_for(result.percent_valid.to_i)} !important;" else '' end
%tr
  %th= result.title
  %td= result.description
  %th= result.required_for
  %td= number_with_delimiter result.total
  %td= link_to number_with_delimiter(result.invalid_count), items_hmis_data_quality_tool_warehouse_reports_report_path(@report, key: result.title)
  %td{ style: background_color } #{result.percent_valid}%
