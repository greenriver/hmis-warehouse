= content_for :crumbs do
  = link_to path_for_question_result(@question, report: @report) do
    = "Â« #{report_short_name} #{@question} Results"
- content_for :title do
  = "#{report_short_name} #{@question} #{@cell}"
.d-flex.mb-2
  %h1= content_for :title
  .ml-auto
    = link_to(link_params.merge({format: :xlsx}),{class: 'btn btn-secondary'}) do
      %i.icon-file-excel
      Download



- if @clients.blank?
  %p.none-found
    No records found.
- else
  .card
    .overflow-x-scroll{style: "height: 800px"}
      %table.table.table-sm.table-bordered.table-fixed
        %thead.thead-dark
          %tr
            %th
            - HudApr::Fy2020::AprClient.detail_headers.each_value do |header|
              %th= header
        %tbody.thead-dark
          - @clients.each.with_index do |client, i|
            %tr
              %th= i + 1
              - HudApr::Fy2020::AprClient.detail_headers.each_key do |k|
                %td{style: 'max-width: 600px;'}
                  = formatted_cell(client[k])
                  -if k == 'client_id'
                    %i.icon-info{ data: { toggle: :popover, title: 'Client Information', url: api_client_path(client.client_id), html: 'true' }}
