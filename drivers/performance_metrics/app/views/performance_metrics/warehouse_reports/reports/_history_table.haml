.warehouse-reports__ad_hoc-export
  - if @reports.exists?
    .row
      .col-8
        %p= page_entries_info @reports, entry_name: _('report')
    .card
      .table-responsive
        %table.table.table-striped.mb-0
          %thead
            %tr
              %th Status
              %th Options
              %th Requested
              %th
          %tbody.report-listing.warehouse-reports__completed
            - @reports.each do |report|
              %tr
                %td
                  = link_to_if(report.completed?, report.status, performance_metrics_warehouse_reports_report_path(report))
                %th= report.filter.describe_filter_as_html
                %td.text-nowrap
                  = report.created_at
                  .text-sm.text-muted by #{report.user&.name}
                %td
                  = link_to performance_metrics_warehouse_reports_report_path(report), method: :delete, class: 'btn btn-sm btn-danger btn-icon-only', data: {confirm: "Are you sure you want to delete this report?"} do
                    %i.icon-cross

  - else
    %p.none-found
      No reports found.
