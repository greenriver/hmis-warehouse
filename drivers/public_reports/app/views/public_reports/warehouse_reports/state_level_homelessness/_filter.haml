= simple_form_for @filter, as: :filters, url: public_reports_warehouse_reports_state_level_homelessness_index_path do |f|
  - content_for :filters_col_full do
    .row
      = render 'public_reports/date_filter', f: f
      - if GrdaWarehouse::Config.get(:multi_coc_installation)
        .col-sm
          = f.input :coc_codes, as: :select_two, collection: @filter.coc_code_options_for_select(user: current_user), input_html: { multiple: true, data: { placeholder: 'Any CoC' }}, include_blank: false, label: 'CoCs'
    .row
      .col-sm
        = f.input :data_source_ids, as: :select_two, collection: @filter.data_source_options_for_select(user: current_user), input_html: { multiple: true, data: {placeholder: 'Any Data Source' }}, include_blank: false, label: 'Data Sources'
      .col-sm
        = f.input :organization_ids, as: :grouped_select_two, group_method: :last, collection: @filter.organization_options_for_select(user: current_user), input_html: { class: :select2, multiple: true, data: {placeholder: 'Any Organization' }}, include_blank: false, label: 'Organizations'
    .row
      .col-sm
        = f.input :project_ids, collection: [], as: :select_two, input_html: { multiple: true, data: { 'collection-path' => api_projects_path(selected_project_ids: @filter.project_ids) }, placeholder: 'Any Project'}, label: 'Projects'
      .col-sm
        = f.input :project_group_ids, as: :select_two, collection: @filter.project_groups_options_for_select(user: current_user), input_html: { class: :select2, multiple: true, data: {placeholder: 'Any Project Group' }}, include_blank: false, label: 'Project Groups'
      .col-sm
        = f.input :project_type_numbers, as: :select_two, collection: @filter.project_type_options_for_select(id_limit: HudUtility2024.homeless_project_types), input_html: { multiple: true, data: { placeholder: 'Any Project Type' }}, include_blank: false, label: 'Project Types'

  - content_for :filter_actions do
    = f.submit 'Queue Report', class: ['btn', 'btn-primary']

  = render 'warehouse_reports/filters', f:f
