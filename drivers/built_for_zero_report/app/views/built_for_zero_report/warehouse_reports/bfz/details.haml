- content_for :modal_title, "#{@key.humanize} Client Details"

- if @data.count.zero?
  No clients found
- else
  - columns = @data.values.first.keys
  %table.table.table-striped
    %thead
      %tr
        - columns.each do |key|
          %th= key.to_s.humanize
    %tbody
      - @data.each do |id, values|
        %tr
        - columns.each do |key|
          - if key == :client_id
            %td= link_to id, client_path(id)
          -else
            %td= values[key]
