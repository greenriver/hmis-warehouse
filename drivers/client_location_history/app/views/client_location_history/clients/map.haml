- title = "Location Map for #{@client.name}"
- content_for :title, title
= render 'clients/breadcrumbs'

= render 'clients/aliases'
= render 'clients/tab_navigation', current: map_client_location_history_client_path(@client)
%h1= title
= render 'filter'
- if @locations.any?
  #client__location-history
  = content_for :page_js do
    :javascript
      var markers = #{@markers.to_json.html_safe};
      var options = #{@options.to_json.html_safe};
      var map = new App.Maps.MapWithMarkers('client__location-history', markers, options);
- else
  .no-data
    No previous locations
