{
  "type": "GROUP",
  "link_id": "destination",
  "text": "Exit Details",
  "data_collected_about": "ALL_CLIENTS",
  "item": [
    {
      "type": "DATE",
      "link_id": "exit-date",
      "text": "Exit Date",
      "mapping": {
        "record_type": "EXIT",
        "field_name": "exitDate"
      },
      "required": true,
      "assessment_date": true,
      "initial": [
        {
          "initial_behavior": "IF_EMPTY",
          "value_local_constant": "$today"
        }
      ],
      "bounds": [
        {
          "id": "min-exit",
          "type": "MIN",
          "_comment": "exit date cannot be before entry date",
          "value_local_constant": "$entryDate"
        },
        {
          "id": "max-exit",
          "type": "MAX",
          "_comment": "exit date cannot be in the future",
          "value_local_constant": "$today"
        }
      ]
    },
    {
      "type": "CHOICE",
      "link_id": "3.12",
      "text": "Exit Destination",
      "pick_list_reference": "DESTINATION",
      "mapping": {
        "record_type": "EXIT",
        "field_name": "destination"
      },
      "required": true
    },
    {
      "type": "GROUP",
      "link_id": "3.12.conditional",
      "item": [
        {
          "type": "CHOICE",
          "link_id": "3.12.A",
          "required": true,
          "text": "Rental subsidy type",
          "pick_list_reference": "RentalSubsidyType",
          "mapping": {
            "record_type": "EXIT",
            "field_name": "destinationSubsidyType"
          },
          "enable_behavior": "ALL",
          "enable_when": [
            {
              "question": "3.12",
              "operator": "EQUAL",
              "answer_code": "RENTAL_BY_CLIENT_WITH_ONGOING_HOUSING_SUBSIDY"
            }
          ]
        },
        {
          "type": "STRING",
          "link_id": "3.12.B",
          "required": true,
          "text": "Other destination",
          "mapping": {
            "record_type": "EXIT",
            "field_name": "otherDestination"
          },
          "enable_behavior": "ALL",
          "enable_when": [
            {
              "question": "3.12",
              "operator": "EQUAL",
              "answer_code": "OTHER"
            }
          ]
        }
      ]
    }
  ]
}