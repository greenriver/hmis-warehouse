- title = "Edit Collection #{@group.name}"
- content_for :title, title

= content_for :crumbs do
  = link_to hmis_admin_groups_path do
    &laquo; Manage Collections

.o-page
  .o-page__title
    %h1= content_for :title

= simple_form_for @group, as: :access_group, url: hmis_admin_group_path do |f|
  = f.error_notification
  .form-inputs.mt-4
    = render 'form', f: f
  .form_actions.mt-4
    = f.button :submit, value: 'Update Collection'
