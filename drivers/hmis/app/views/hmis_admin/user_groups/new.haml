- title = "New User Group"
- content_for :title, title

= content_for :crumbs do
  = link_to hmis_admin_user_groups_path do
    &laquo; Manage User Groups

.o-page
  .o-page__title
    %h1= content_for :title
.row
  .col-sm-12
    = simple_form_for @user_group, as: :user_group, url: hmis_admin_user_groups_path do |f|
      = f.error_notification
      .form-inputs
        .row
          .col-8
            = f.input :name

      .form_actions.mt-4
        = f.button :submit, value: 'Create User Group'
