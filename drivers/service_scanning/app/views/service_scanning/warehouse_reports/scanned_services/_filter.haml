= simple_form_for @filter, as: :filters, url: service_scanning_warehouse_reports_scanned_services_path, method: :get do |f|
  - content_for :filters_col_full do
    .row
      .col-sm-3
        = f.input :start, as: :date_picker, label: 'Start', input_html: { value: @filter.start }
      .col-sm-3
        = f.input :end, as: :date_picker, label: 'End'
      .col-sm-6
        = f.input :project_ids, as: :grouped_select, group_method: :last, collection: @filter.project_options_for_select(user: current_user), input_html: {class: :select2, multiple: true, data: {placeholder: 'All' }}, include_blank: false, label: 'Projects'
    .row
      .col-sm-3
        = f.input :service_type, collection: ServiceScanning::Service.available_types, input_html: { class: 'select2 jType' }, label: 'Service Provided', include_blank: false
      .col-sm-3.jOtherType
        = f.input :other_type, collection: ServiceScanning::Service.known_other_types, input_html: { class: 'select2' }, label: 'Service Detail', include_blank: 'Any'

  - content_for :filter_actions do
    = f.submit 'Update', class: ['btn', 'btn-primary']

  = render 'warehouse_reports/filters', f:f

= content_for :page_js do
  :javascript
    $(document).ready(function() {
      $('.jType').on('change', function(e) {
        if($(this).val() == 'other'){
          $('.jOtherType').show();
        } else {
          $('.jOtherType').hide();
        }
      });
      $('.jType').trigger('change');
    });