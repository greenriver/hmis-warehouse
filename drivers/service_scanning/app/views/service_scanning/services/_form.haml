= simple_form_for @service, as: :service, url: service_scanning_services_path do |f|
  - project_auto_focus = params.dig(:service, :autofocus) == :project_id
  = f.input :project_id, collection: @service.class.project_options_for_select(user: current_user), selected: @service.project_id, input_html: { class: :select2, autofocus: project_auto_focus }, as: :grouped_select, group_method: :last, required: true
  = f.input :slug, collection: @service.class.available_types, input_html: { class: 'select2 jType' }, label: 'Service Provided', required: true
  .jOtherType
    = f.input :other_type, collection: @service.class.known_other_types, selected: @service.other_type, input_html: { class: :select2, data: { tags: true }}, include_blank: true, hint: 'If you don\'t see the type required, type it in and select it'
  = f.input :provided_at, input_html: { value: Time.current, class: :exact_date_time_picker }, label: 'Time Service Provided', as: :string
  - client_auto_focus = params.dig(:service, :project_id).present? && params.dig(:service, :autofocus).blank? && ! @no_client_found
  = f.input :scanner_id, input_html: { value: nil, autofocus: client_auto_focus }, label: 'Scan Card or Name Search', hint: 'If the client doesn\'t have a scan card, search by name.'

  = f.button :submit, value: 'Add Service or Search for Client'

= content_for :page_js do
  :javascript
    $(document).ready(function() {
      $('.jType').on('change', function(e) {
        if($(this).val() == 'other'){
          $('.jOtherType').show();
        } else {
          $('.jOtherType').hide();
        }
      });
      $('.jType').trigger('change');
    });