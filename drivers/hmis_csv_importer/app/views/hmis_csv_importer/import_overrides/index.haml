= content_for :crumbs do
  = link_to data_source_path(@data_source) do
    &laquo; #{@data_source.name}

.d-flex.mb-4
  %h1 Import Overrides for #{@data_source.name}
  = link_to new_hmis_csv_importer_data_source_import_override_path(data_source: @data_source.id), class: 'btn btn-primary ml-auto' do
    %i.icon-plus
    Add Override
- if @overrides.any?
  .card.mb-4
    %table.table.table-striped
      %thead
        %tr
          %th File
          %th Replaces
          %th With
          %th When
      %tbody
        - @overrides.each do |override|
          %tr
            %td= override.file_name
            %td= override.replaces_column
            %td= override.describe_with
            %td= override.describe_when
            %td
              = link_to hmis_csv_importer_data_source_import_override_path(@data_source, override), method: :delete, class: 'btn btn-sm btn-icon-only btn-danger', data: { confirm: "Really delete override for #{override.replaces_column}?"} do
                %i.icon-cross

- else
  .none-found
    No Overrides for #{@data_source.name}
