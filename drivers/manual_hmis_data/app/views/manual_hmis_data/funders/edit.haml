-# confidentiality status ignored because page is not visible to users who can't see confidential project names
= content_for :modal_title do
  Edit Funder for #{@funder.project.name(ignore_confidential_status: true)} at #{@funder.project.organization.name(ignore_confidential_status: true)}
= simple_form_for :funder, url: manual_hmis_data_funder_path, method: :patch do |f|
  = render 'manual_hmis_data/form', form: f
  = f.submit 'Save Funder'
