-# confidentiality status ignored because page is not visible to users who can't see confidential project names
= content_for :modal_title do
  Edit Project CoC Record for #{@project_coc.project.name(ignore_confidential_status: true)} at #{@project_coc.project.organization.name(ignore_confidential_status: true)}
= simple_form_for :project_coc, url: manual_hmis_data_project_coc_path, method: :patch do |f|
  = render 'manual_hmis_data/form', form: f
  = f.submit 'Save Project CoC Record'
