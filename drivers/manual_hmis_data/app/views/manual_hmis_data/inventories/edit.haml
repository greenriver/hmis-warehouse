-# confidentiality status ignored because page is not visible to users who can't see confidential project names
= content_for :modal_title do
  Edit Inventory for #{@inventory.project.name(ignore_confidential_status: true)} at #{@inventory.project.organization.name(ignore_confidential_status: true)}
= simple_form_for :inventory, url: manual_hmis_data_inventory_path, method: :patch do |f|
  = render 'manual_hmis_data/form', form: f
  = f.submit 'Save Inventory'
