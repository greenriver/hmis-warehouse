- item = triage
%div{class: flex}
  %dl.mr-4
    %dt Exposed
    %dd= item.exposure.presence || 'Unknown'
  %dl.mr-4
    %dt Symptomatic
    %dd= item.symptoms.presence || 'Unknown'
  %dl.mr-4
    %dt First symptoms presented
    %dd= item.first_symptoms_on&.to_date.presence || 'Blank'
  %dl.mr-4
    %dt Referred to
    %dd= item.referred_to.presence || 'Blank'
  %dl.mr-4
    %dt Referred on
    %dd= item.referred_on.presence || 'Blank'
  %dl.mr-4
    %dt Notes
    %dd= simple_format(item.notes) || 'Blank'
  %dl.mr-4
    %dt Entered By
    %dd= item.user&.name
  %dl.mr-4
    %dt Entered At
    %dd= item.created_at
  %dl.mr-4
    %dt Agency
    %dd= item.agency&.name || 'Unknown'

- if can_edit_health_emergency_screening?
  .d-flex
    = link_to client_he_triage_path(client_id: @client.id, id: item.id), method: :delete, class: 'btn btn-danger btn-sm ml-auto', data: { confirm: "Really delete this #{item.title}?"} do
      %i.icon-cross
      Delete