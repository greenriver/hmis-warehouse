%section.o-section-card
  %h3 Consent Form
  .c-card.c-card--block.c-card--padded.c-card--flush
    .d-flex.flex-wrap
      %dl.mr-10.mb-2
        %dd.d-inline-block
          - status = @client.release_current_status
          - if status == 'None on file'
            .alert.alert-warning.pt-2.pb-2= status
          - elsif status == 'Expired'
            .alert.alert-danger.pt-2.pb-2= status
          - else
            .alert.alert-success.pt-2.pb-2=status
      %dl.mr-8.mb-2
        %dt Release Type
        %dd
          - if @client.housing_release_status.present?
            %i.icon-unlocked
            = @client.housing_release_status
          - else
            %i.icon-lock
            Not Signed
      %dl.mr-8.mb-2
        %dt Consent Form Confirmed
        %dd
          - confirmed = @client.consent_confirmed?
          = checkmark_or_x confirmed
          - unless confirmed
            Form Not Confirmed
      %dl
        %dt Consent Form Signed On
        %dd
          - signed_date = @client.consent_form_signed_on
          - if signed_date
            %i.icon-calendar
            = signed_date
          - else
            %i.fa.fa-times-circle.o-color--warning.inline-icon
            Form Not Signed
