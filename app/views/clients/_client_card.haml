- disable_link = false unless defined?(disable_link)
- window_link = client.window_link_for?(current_user)
- show_window_link = window_link.present? && !disable_link
.clients__client-card.clients__client.c-card.c-card--linked{data: {id: client.id, href: window_link}, class: show_window_link ? 'js-client' : nil}
  .c-card__content.p-0.pt-sm-4
    .row
      .col-12.col-sm
        = render 'clients/search/aliases', client: client
      .col-12.col-sm
        = render 'clients/search/health_emergency', client: client
        = render 'clients/search/cas', client: client
        = render 'clients/search/demographics', client: client
    .w-100
    .row
      .col.col-sm-6
        = render 'relationships', client: client
      .col.col-sm-6
        = render 'clients/search/assessments', client: client


    -# Card Footer
    -# Include call to actions
    .c-card__footer
      .client__view_client
        - if show_window_link
          = link_to 'View', window_link, class: 'btn btn-secondary ml-auto pr-8 pl-8'
