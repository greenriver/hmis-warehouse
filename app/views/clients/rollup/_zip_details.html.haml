= cache(['clients', 'zip_details', @client, can_view_projects?, controller_path, current_user], expires_in: GrdaWarehouse::Hud::Client::CACHE_EXPIRY) do
  - addresses = @client.previous_permanent_locations_for_display(current_user)
  - if addresses.present?
    %table.table
      %thead
        %tr
          %th Program Entry Year
          %th{ data: { field: 'LastPermanentCity' } } Primary City
          %th{ data: { field: 'LastPermanentState' } } State
          %th{ data: { field: 'LastPermanentZIP' } } Last Permanenent Zip
          %th Label
      %tbody
        - addresses.each do |address|
          %tr
            %td= address[:year]
            %td= address[:city]
            %td= address[:state]
            %td= address[:zip]
            %td= address[:label]
  - else
    .no-data
      No previous addresses
