- url = window_client_health_qualifying_activities_path(client_id: patient.client.id)
- if current_user.can_edit_clients?
  - url = client_health_qualifying_activities_path(client_id: patient.client.id)

.patient__engagement.mr-2
  - if ! patient.engaged?
    .patient__engagement-countdown
      = "#{pluralize(patient.days_to_engage, 'day')} remaining to obtain PCTP signatures"
  - elsif patient.qualified_activities_since(date: 1.months.ago).count == 0
    .patient__engagement-countdown
      = link_to "#{pluralize(0, 'Qualifying Activities')} this month", url
  - else
    .patient__engagement-engaged
      = link_to "#{pluralize(patient.qualified_activities_since(date: 1.months.ago).count, 'Qualifying Activities')} this month", url