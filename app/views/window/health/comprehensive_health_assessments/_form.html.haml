        = cha_radios     f, :e_q1i

        = cha_radios     f, :e_q2a
        = cha_radios     f, :e_q2b
        = cha_radios     f, :e_q2c

      .c-card__header--external
        %h3#section-f
          = _('CHA F_TITLE')
        %small= _('CHA F_SUBTITLE')
      .well
        = cha_radios     f, :f_q1a
        = cha_radios     f, :f_q1b
        = cha_radios     f, :f_q1c
