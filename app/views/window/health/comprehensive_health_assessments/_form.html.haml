= content_for :body_data_scrollspy, true

- url = polymorphic_path(cha_path_generator, client_id: @client.id, id: @cha.id, format: :js)
= simple_form_for @cha, url: polymorphic_path(cha_path_generator, client_id: @client.id, id: @cha.id), as: :form, html: { data: { url: url }} do |f|

  .form.form--with-nav.j-form.autosave
    = render 'form_navigation'
    .form__questions

      .c-card__header--external
        %h3#section-a
          = _('CHA A_TITLE')
        %small= _('CHA A_SUBTITLE')
      .well
        .row.mb-1.pr-8
          .col-md-8
            = cha_string     f, :a_q1, input_html: { disabled: true, value: @client.name }
        = cha_radios     f, :a_q2
        .row.mb-1.pr-8
          .col-md-8.col-lg-4
            = cha_datepicker f, :a_q3, input_html: { disabled: true, value: @client.DOB }
        = cha_radios     f, :a_q4
        .form-group
          %label.control-label= _('CHA A_Q5')
          .row.mb-1.pr-2
            .col-md-8
              = cha_string f, :a_q5a
          .row.mb-1.pr-2
            .col-md-8
              = cha_string f, :a_q5b
          .row.mb-1.pr-2
            .col-md-8
              = cha_string f, :a_q5c, input_html: { disabled: true, value: @patient.medicaid_id }
        .row.mb-1.pr-2
          .col-sm-8
            - value = f.object.answers.try(:[], 'A').try(:[], 'answers').try(:[], 'a_q6').try(:[], 'answer')
            = cha_string f, :a_q6, input_html: { value: value || ENV['AGENCY_PROVIDER_NUMBER'] }
        = cha_radios     f, :a_q7
        .row.mb-1.pr-2
          .col-md-8.col-lg-4
            = cha_datepicker f, :a_q8
        = cha_text       f, :a_q9
        = cha_string     f, :a_q10
        = cha_radios     f, :a_q11
        = cha_radios     f, :a_q12

      .c-card__header--external
        %h3#section-b
          = _('CHA B_TITLE')
        %small= _('CHA B_SUBTITLE')
      .well
        .row.mb-1.pr-2
          .col-md-8.col-lg-4
            = cha_datepicker f, :b_q1
        = cha_checkboxes f, :b_q2
        = cha_radios     f, :b_q3
        = cha_checkboxes f, :b_q4

      .c-card__header--external
        %h3#section-c
