        = cha_radios     f, :f_q2
        = cha_radios     f, :f_q3
        = cha_radios     f, :f_q4
        = cha_radios     f, :f_q5

      .c-card__header--external
        %h3#section-g
          = _('CHA G_TITLE')
        %small= _('CHA G_SUBTITLE')
      .well
        .row
          .col-sm-12.mb-1
            %h4= _('CHA G_Q1_HEADER')
            %p.cha__help-text= _('CHA G_Q1_SUBHEADER')
        .row
          .col-sm-12.mb-1
            %p
              %strong= _("CHA G_Q1A_HEADER")
        .row
          .col-md-8
            = cha_select     f, :g_q1ap
            = cha_select     f, :g_q1ac
