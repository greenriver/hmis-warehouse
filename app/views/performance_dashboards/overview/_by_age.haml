- breakdown = 'By Age'
- sub_keys = @report.age_bucket_titles.invert
- options = {age: :true}
- bar_size = 100

- columns = [@report.enrolled_by_age_data_for_chart[:columns]]
- if @report.include_comparison?
  - columns << @comparison.enrolled_by_age_data_for_chart[:columns]
- categories = @report.enrolled_by_age_data_for_chart[:categories]
= render 'performance_dashboards/overview/breakdown/enrolled', breakdown: breakdown, columns: columns, categories: categories, sub_keys: sub_keys, options: options, bar_size: bar_size

