#pjax-modal.modal.fade(data-pjax-modal role="dialog" aria-hidden="true")
  .modal-dialog.modal-dialog-scrollable.modal-dialog-centered{role: :document, class: modal_size}
    .modal-content(data-pjax-modal-container)
      .modal-header
        %h4.modal-title(data-pjax-modal-title) Loading
        %button.close(aria-label="Close" pjax-modal-close type="button")
          %i.modal-icon-close
      .modal-body.clearfix
        %div(data-pjax-modal-loading)
          Loading&hellip;
