%h2 Sign In
= simple_form_for(User.new, as: :user, url: session_path(:user), wrapper: :vertical_form_hint_first) do |f|
  .row
    .col-sm-4
      .form-inputs
        = f.input :email, required: false, autofocus: true
        = f.input :password, required: false, input_html: { autocomplete: :off }
      .form-actions
        = f.button :submit, 'Sign In'
      .login-links
        = link_to "Forgot your password?", new_password_path(resource_name)
        %br
        = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
        %br
        = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)
        - if GrdaWarehouse::Config.get(:request_account_available)
          = link_to 'Request an account', new_users_account_request_path