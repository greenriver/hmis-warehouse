%article.l-print__section
  %ul.l-print__summary-items
    %li
      %dl
        %dt Patient DOB
        %dd= @patient.birthdate&.to_date
    %li
      %dl
        %dt Initial Date
        %dd= @careplan.initial_date&.to_date
    %li
      %dl
        %dt Review Date
        %dd= @careplan.review_date&.to_date


= render 'health/careplans/team_members_table'

%article.health-care-plan__about-me.l-print__section--page
  %h1 Strengths and Barriers
  .l-print__item
    %h4 My Health Problems
    = simple_format @careplan.patient_health_problems
  .l-print__item
    %h4 My Strengths (including interests, preferences, and cultural considerations and available informal, caregiver, or social supports, peer supports)
    = simple_format @careplan.patient_strengths
  .l-print__item
    %h4 My Barriers
    = simple_format @careplan.patient_barriers
= render 'health/careplans/goals_table'

%article.health-care-plan__issues.l-print__section--page
  = render 'health/careplans/future_issues'

%article.health-care-plan__services.l-print__section--page
  = render 'health/careplans/service_list'

%article.health-care-plan__equipments.l-print__section--page
  = render 'health/careplans/equipment_list'

%section.health-care-plan__backup_plans.l-print__section--page.no-break
  %strong
    -if  @careplan.member_understands_contingency
      _X_
    - else
      ___
  Member understands contingency plan described below if care coordinator is needed but not available
  = render 'health/careplans/backup_plan_list'