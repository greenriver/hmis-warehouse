%section.client__assessments.c-card.c-card--block.c-card--no-padding
  .c-card__header.c-card__header--external
    %h2.section-expander-block__header
      Comprehensive Assessments
    - unless @patient&.ca_assessments&.incomplete&.exists?
      = link_to new_client_health_comprehensive_assessment_assessment_path(@client), class: 'btn btn-secondary btn-sm ml-auto' do
        %i.icon-plus
        Add CA

  .c-card__content.c-card__content--flush
    = render 'chas_table'