- title = 'Health Files'
- content_for(:title, title)
.o-page
  .o-page__header
    %h1= "#{content_for(:title)} for #{@client.full_name}"
  = render 'clients/breadcrumbs'
  = render 'clients/tab_navigation', current: polymorphic_path(health_path_generator + [:files], client_id: @client)
  = render 'health/patient_release_status'
  = render 'health/patient_form_status'
  .row
    .col-sm-8
      = render 'health/files/file_list'
    .col-sm-4
      = render 'clients/files/blank_file_list', file_list_title: 'Blank Health Files'