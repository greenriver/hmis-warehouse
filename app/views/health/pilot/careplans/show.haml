- title = 'Collaborative Care Plan'
= content_for(:title, title)

.o-page
  .o-page__header
    %h1= "#{content_for(:title)} for #{@client.full_name}"
  = render 'clients/breadcrumbs'
  = render 'clients/tab_navigation', current: polymorphic_path(careplan_pilot_path_generator)
  = render 'window/health/patient/patient_status'
  = render 'print_link'

  .o-page__main-content.row
    .col-sm-5
      - unless @readonly
        = render 'assessments'
    .col-sm-7
      = render 'summary'
      = render 'epic_goals'
