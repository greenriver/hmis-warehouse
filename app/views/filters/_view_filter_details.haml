= simple_form_for :filter, url: filter_path, data: { submits_to_ajax_modal: true } do |f|
  - local_assigns[:filter_hash].each do |key, value|
    - if value.is_a?(Array)
      - value.each do |v|
        = hidden_field_tag "filter[#{key}][]", v
    - else
      = hidden_field_tag "filter[#{key}]", value
  - local_assigns[:selected_keys].each do |value|
    = hidden_field_tag 'selected_keys[]', value
  - unless local_assigns[:external]
    %button.btn.btn-link.btn-sm{type: :submit}
      View universe details