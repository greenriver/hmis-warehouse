= simple_form_for :report_result do |f|
  %h3 Queue Report
  .well
    = f.error_notification
    .row.mb-2
      .col-sm-4
        = f.input :project, input_html: {name: 'report_result[options][project]'}, as: :select_two, collection: Reports::Ahar::Fy2016::ByProject.available_projects_for_filtering
      .col-sm-4
        %label.control-lable.string.required
          %abbr{data: {original_title: "required"}} *
          Start Date
        = f.input :report_start, as: :date_picker, input_html: {name: 'report_result[options][report_start]', value: '2015-10-01'.to_date}, label: false
      .col-sm-4
        %label.control-lable.string.required
          %abbr{data: {original_title: "required"}} *
          End Date
        = f.input :report_end, as: :date_picker, input_html: {name: 'report_result[options][report_end]', value: '2016-09-30'.to_date, class: 'form-control jStart'}, label: false
    %hr
    .row
      .col-sm-12.mb-2
        = f.button :button, class: 'btn btn-primary pull-right' do
          %span.icon-plus
          Queue Report Run
