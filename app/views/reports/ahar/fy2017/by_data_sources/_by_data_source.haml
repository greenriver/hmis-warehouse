= simple_form_for :options, url: hud_reports_ahar_fy_2017_data_source_index_path() do |f|
  %h3 Queue Report
  .well
    = f.error_notification
    .row
      = render 'reports/ahar/fy2017/base_form', f: f
      
      .col-sm-4
        = f.input :data_source, collection: Reports::Ahar::Fy2017::ByDataSource.available_data_sources_for_filtering, as: :select_two
    %hr
    .row
      .col-sm-12.mb-2
        = f.button :button, class: 'btn btn-primary pull-right' do
          %span.icon-plus
          Queue Report Run