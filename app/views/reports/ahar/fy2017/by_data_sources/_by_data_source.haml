= simple_form_for :options, url: hud_reports_ahar_fy_2017_data_source_index_path() do |f|
  %h3 Queue Report
  .slab
    = f.error_notification
    .row
      = render 'reports/ahar/fy2017/base_form', f: f
      
      .col-sm-4
        = f.input :data_source, input_html: {class: 'select2'}, collection: Reports::Ahar::Fy2017::ByDataSource.available_data_sources_for_filtering
    .row
      .col-sm-12.margin-bottom-02
        = f.button :button, class: 'btn btn-primary pull-right' do
          %span.icon-plus
          Queue Report Run