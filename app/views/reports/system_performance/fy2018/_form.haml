= simple_form_for :report_result do |f|
  %h3 Queue Report
  .slab
    = f.error_notification
    .row.margin-bottom-02
      .col-sm-4
        = f.input :project_id, input_html: {name: 'report_result[options][project_id][]', multiple: true, class: 'select2'}, as: :select, collection: Reports::SystemPerformance::Fy2017::Base.available_projects, required: false
        = f.input :project_group_ids, input_html: { name: 'report_result[options][project_group_ids][]', multiple: true, class: 'select2' }, as: :select, collection: GrdaWarehouse::ProjectGroup.all, required: false, label: 'Project Groups'
        = f.input :sub_population, input_html: { name: 'report_result[options][sub_population]', class: 'select2' }, as: :select, collection: Reports::SystemPerformance::Fy2017::Base.available_sub_populations, required: false, label: 'Sub Population'
        = f.input :data_source_id, input_html: {name: 'report_result[options][data_source_id]', class: 'select2'}, as: :select, collection: Reports::SystemPerformance::Fy2017::Base.available_data_sources, required: false
      .col-sm-4
        = f.input :coc_code, collection: GrdaWarehouse::Hud::ProjectCoc.distinct.pluck(:CoCCode), selected: GrdaWarehouse::Config.get(:site_coc_codes), input_html: {name: 'report_result[options][coc_code]'}, hint: GrdaWarehouse::Config.get(:site_coc_codes), required: false
        = f.input :race_code, input_html: { name: 'report_result[options][race_code]', class: 'select2'}, required: false, collection: Reports::SystemPerformance::Fy2017::Base.available_races, label: 'Race', include_blank: 'All'
        = f.input :ethnicity_code, input_html: { name: 'report_result[options][ethnicity_code]', class: 'select2'}, required: false, collection: ::HUD.ethnicities.invert, label: 'Ethnicity', include_blank: 'All'
      .col-sm-4
        .form-group
          %label.control-lable.string
            %abbr{data: {original_title: "required"}} *
            Start Date
          = f.input :report_start, as: :date_picker, input_html: {name: 'report_result[options][report_start]', value: Date.new(Date.today.year-2,10,1)}, label: false
        .form-group
          %label.control-lable.string.required
            %abbr{data: {original_title: "required"}} *
            End Date
          = f.input :report_end, as: :date_picker, input_html: {name: 'report_result[options][report_end]', value: Date.new(Date.today.year-1,9,30).to_date, class: 'form-control jStart'}, label: false
    .row
      .col-sm-12.margin-bottom-12
        .form-actions
          = f.button :button, class: 'btn btn-primary pull-right' do
            %span.icon-plus
            Queue Report Run