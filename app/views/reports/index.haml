- content_for :title, _("Reports")
%header.mb-3
  %h1= content_for :title
.row.table-utilities
  .col-sm-12
    .table-responsive
      %table.table.table-condensed.table-hover.table-reports
        - @reports.each_with_index do |base,i|
          - show_header = i == 0
          - base, reports = base
          %thead
            %tr{class: 'report-base'}
              %th= link_to "#{base}::Base".constantize.report_name, report_results_summary_path(reports.first[:report_results_summary_id])
              %th
                - if show_header
                  = 'Last Run'
              %th
                - if show_header
                  = 'Status'
              %th
                - if show_header
                  = 'Completed In'
          %tbody
            - reports.each do |report|
              %tr
                %td= link_to report.name, report.results_path
                %td= report.last_result.try(:last_run)
                %td= report.last_result.try(:last_run_status)
                %td= report.last_result.try(:completed_in)
