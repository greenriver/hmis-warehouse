= simple_form_for :report_result do |f|
  %h3 Queue Report
  .well
    = f.error_notification
    .row.mb-2
      .col-sm-4
        = f.input :pit_date, input_html: {name: 'report_result[options][pit_date]', value: default_pit_date}, as: :date_picker, label: 'PIT date'
      .col-sm-4
        = f.input :chronic_date, input_html: {name: 'report_result[options][chronic_date]', value: default_chronic_date}, as: :date_picker
      .col-sm-4
        = f.input :project, input_html: {name: 'report_result[options][project]', class: 'select2'}, as: :select, collection: Reports::Pit::Fy2018::ByProject.available_projects_for_filtering(current_user)
    %hr
    .row
      .col-sm-12.mb-2
        = f.button :button, class: 'btn btn-primary pull-right' do
          %span.icon-plus
          Queue Report Run