.form-inputs
  = f.input :name
  = f.input :projects, label: 'Projects', collection: [], as: :select_two, input_html: {multiple: true, placeholder: 'Choose Projects', data: {'collection-path' => api_projects_path(selected_project_ids: @project_group.project_ids)}}, include_blank: false
