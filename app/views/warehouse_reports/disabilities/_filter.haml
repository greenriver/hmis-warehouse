= simple_form_for @filter, as: :filter, remote: true, url: warehouse_reports_disabilities_path, html: {method: :get, class: 'jFilter'} do |f|
  - content_for :filters_col_full do
    .row
      .col-sm-8
        = render 'warehouse_reports/date_range_filters', f:f
      .col-md-4
        = f.input :sub_population, collection: available_sub_populations, include_blank: false, input_html: {class: 'select2'}

    .row
      .col-sm-4
        .input-group
          = f.input :disabilities, collection: available_disabilities, input_html: { multiple: true, data: {placeholder: "Choose at least one disability type"}, class: 'select2' }, label: "Disability type"
      .col-sm-4
        .input-group
          = f.input :project_types, collection: available_project_types, input_html: { multiple: true, data: {placeholder: "Choose at least one project type"}, class: 'select2' }, label: "Project type"
      .col-sm-4.text-right

  - content_for :filter_actions do
    = f.button :submit, value: 'Run Report', data: { disable_with: 'running...' }

  = render 'warehouse_reports/filters', f:f
