%table.table.table-sm.table-hover
  %thead
    %tr
      %th Last Name
      %th First Name
      %th Disability & Response
  %tbody
    - @clients.each do |client|
      %tr
        %td
          %nobr= link_to_if can_view_clients?, client.LastName, appropriate_client_path(client)
        %td
          %nobr= link_to_if can_view_clients?, client.FirstName, appropriate_client_path(client)
        %td
          - disabilities = client.source_disabilities.map {|disability| "#{disability.disability_type_text}: #{disability.response}"}.uniq
          = disabilities.join('<br />').html_safe
