:css
  .fix-date-picker .date_picker .input-group {
    max-width: inherit;
  }
  .fix-select2 .select2-selection {
    background: #fff !important;
    padding: 0.5em !important;
    min-height: initial !important;
  }
= simple_form_for filters, as: :compare, url: url_for(action: :overlap), html: {id: form_id}, method: :get do |f|
  .row.fix-date-picker.fix-select2
    .col-lg-6
      .row
        .col-md-6
          = f.input :coc1_id,
            collection: @cocs,
            value_method: :id,
            label_method: :number_and_name,
            required: true,
            label: 'Primary CoC',
            input_html: { class: [:select2], id: 'compare_coc1'}
        .col-md-6
          = f.input :coc2_id,
            collection: @cocs,
            value_method: :id,
            label_method: :number_and_name,
            required: false,
            label: 'Secondary CoC',
            input_html: { class: [:select2], id: 'compare_coc2'}
    .col-lg-6
      .row
        .col-md-6
          = f.input :start_date,
            as: :date_picker,
            label: 'Service Start Date',
            required: true,
            input_html: {id: 'compare_start_date'}
        .col-md-6
          = f.input :end_date,
            as: :date_picker,
            label: '&nbsp;'.html_safe,
            label: 'Service End Date',
            required: true,
            input_html: {id: 'compare_end_date'}
  .d-flex.align-items-center.justify-content-end
    .j-submit-button-error.hide.mr-4.alert.alert-danger.mt-2
    .j-submit-button-prompt.mr-4{class: filters.coc1 ? 'd-none' : nil} To start, select a Primary CoC
    .j-submit-button-loading.mr-4.d-none
      .d-flex
        .mr-2= render 'spinner'
        %div Loading&hellip;
    %div
      %button.btn.btn-primary.j-submit-button(type='button' disabled) Update
