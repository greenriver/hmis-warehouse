.d-flex.text-center.justify-content-center.mt-4.mb-6
  .rrh__enrolled.chunk.pr-4.mr-4.mb-4
    %h4.title
      Enrolled Clients
    %i.icon-group.metric
    .metric
      - client_count = @report.enrolled_clients.count
      = link_to_if current_user.can_access_some_version_of_clients?, pluralize(client_count, 'client'), clients_warehouse_reports_rrh_index_path(params.permit!.merge(metric: :enrolled_clients)), data: { loads_in_pjax_modal: true }
    .description
      - if client_count != 1
        were enrolled in the
      - else
        was enrolled in the
      - if @filter.project_id.present?
        project
      - else
        projects
      during the reporting period.
      .project-name.text-small.mt-2
        %em= @report.project_names
