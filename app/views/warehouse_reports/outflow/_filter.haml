= simple_form_for :filter, url: warehouse_reports_outflow_index_path, html: { method: :get, class: 'jFilter' } do |f|
  - content_for :filters_col_full do
    .row
      .col-4
        = f.input :start, label: 'Start Date', as: :date_picker, input_html: {value: @filter.start}
      .col-4
        = f.input :end, label: 'End Date', as: :date_picker, input_html: {value: @filter.end}
      .col-4
        = f.input :no_service_after_date, label: 'No Service After', as: :date_picker, input_html: {value: @filter.no_service_after_date}
    .row
      .col-4
        = f.input :sub_population, collection: @filter.available_sub_populations, selected:  @filter.sub_population, required: false, include_blank: false, input_html: {class: 'select2'}
      .col-4
        = f.input :organization_ids, collection: GrdaWarehouse::Hud::Organization.options_for_select(user: current_user), placeholder: 'Any Organization', as: :grouped_select_two, group_method: :last, input_html: {multiple: true }, selected: @filter.organization_ids, label: 'Organizations', required: false
      .col-4
        = f.input :project_ids, label: 'Projects', collection: [], as: :select_two, input_html: {multiple: true, placeholder: 'Any Project', data: {'collection-path' => api_projects_path(selected_project_ids: @filter.project_ids)}}, include_blank: false
    .row
      .col-4
        = f.input :races, collection: HUD.races.invert, placeholder: 'Any Race', selected: @filter.races, required: false, input_html: {multiple: true, class: 'select2'}
      .col-4
        = f.input :ethnicities, collection: HUD.ethnicities.invert, placeholder: 'Any Ethnicity', selected: @filter.ethnicities, required: false, input_html: {multiple: true, class: 'select2'}
      .col-4
        = f.input :genders, collection: HUD.genders.invert, placeholder: 'Any Gender', selected: @filter.genders, required: false, input_html: {multiple: true, class: 'select2'}
    .row
      .col-8
        = f.input :no_recent_service_project_ids, collection: [], as: :select_two, input_html: {multiple: true, placeholder: 'No Project Limit', data: {'collection-path' => api_projects_path(selected_project_ids: @filter.no_recent_service_project_ids)}}, include_blank: false, label: 'Additional projects included in "without recent service" calculation', required: false
    .row
      .col-6
        = f.input :limit_to_vispdats, label: 'Only include clients with a VI-SPDAT?', as: :boolean
      .col-6
        = f.input :require_homeless_enrollment, label: 'Client received at least one homeless service during the date range', as: :boolean

  - content_for :filter_actions do
    .row
      .col-sm-2.mt-no-label
        = f.button :submit, value: 'Update View'


  = render 'warehouse_reports/filters', f:f
