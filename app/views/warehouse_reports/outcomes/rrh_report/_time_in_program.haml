.ho-container.rrh.jTimeInProgram
  .ho-container__header
    %h3 Time in Program
  .rrh__time-in-pre-placement.chunk.pr-4.mr-4
    - content_for :panel_collapse_content, flush: true do
      .row
        .col-sm-9.rrh__time.chunk
          .jTimeInPrePlacementExitToStabilizationChart.mb-2
          .jTimeInPrePlacementExitToStabilizationChartLegend.d-flex{style: 'max-width: 100%; overflow: auto;'}
        .col-sm-3.metric.text-center.rrh__time.chunk
          %h4.title Average Time in #{_('Pre-Placement')} for the Reporting Period
          %i.icon-calendar.metric
          .metric
            = pluralize(@report.average_days_leavers_pre_placement_exit_to_stabilization, 'day')
          %p.description For clients exiting to #{_('Stabilization')}.
    = render 'common/panel_collapse', id: 'jTimeInPrePlacementExitToStabilizationChart', title: "Time in #{_('Pre-Placement')} with Exits to #{_('Stabilization')}", default_open: 'yes'
    - content_for :panel_collapse_content, flush: true do
      .row
        .col-sm-9.rrh__time.chunk
          .jTimeInPrePlacementExitNoStabilizationChart.mb-2
          .jTimeInPrePlacementExitNoStabilizationChartLegend.d-flex{style: 'max-width: 100%; overflow: auto;'}
        .col-sm-3.metric.text-center.rrh__time.chunk
          %h4.title Average Time in #{_('Pre-Placement')} for the Reporting Period
          %i.icon-calendar.metric
          .metric
            = pluralize(@report.average_days_leavers_pre_placement_exit_no_stabilization, 'day')
          %p.description For clients exiting to anywhere except #{_('stabilization')}.
    = render 'common/panel_collapse', id: 'jTimeInPrePlacementExitNoStabilizationChart', title: "Time in #{_('Pre-Placement')} with an Exit not to #{_('Stabilization')}", default_open: 'yes'
    - content_for :panel_collapse_content, flush: true do
      .row
        .col-sm-9.rrh__time.chunk
          .jTimeInPrePlacementChart.mb-2
          .jTimeInPrePlacementChartLegend.d-flex{style: 'max-width: 100%; overflow: auto;'}
        .col-sm-3.metric.text-center.rrh__time.chunk
          %h4.title Average Time in #{_('Pre-Placement')} for the Reporting Period
          %i.icon-calendar.metric
          .metric
            = pluralize(@report.leavers_average_pre_placement, 'day')
          %p.description For clients exiting to any destination.
    = render 'common/panel_collapse', id: 'jTimeInPrePlacementChart', title: "Time in #{_('Pre-Placement')} with an Exit to Any Destination", default_open: 'yes'

    - content_for :panel_collapse_content, flush: true do
      .row
        .col-sm-9.rrh__time.chunk
          .jTimeInStabilizationChart.mb-2
          .jTimeInStabilizationChartLegend.d-flex{style: 'max-width: 100%; overflow: auto;'}
        .col-sm-3.metric.text-center.rrh__time.chunk
          %h4.title
            Average Time in #{_('Stabilization')} for the Reporting Period
          %i.icon-calendar.metric
          .metric
            = pluralize(@report.average_days_in_stabilization, 'day')
          %p.description For clients exiting to any destination.
    = render 'common/panel_collapse', id: 'jTimeInStabilizationChart', title: "Time in #{_('Stabilization')} with an Exit to any Destination", default_open: 'yes'
