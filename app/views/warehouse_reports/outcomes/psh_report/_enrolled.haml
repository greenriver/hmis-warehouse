.d-flex.text-center.justify-content-center.mt-4.mb-6
  .rrh__enrolled.chunk.pr-4.mr-4.mb-4
    %h4.title
      Enrolled Clients
    %i.icon-group.metric
    .metric
      - client_count = @report.enrolled_clients.distinct.select(:client_id).count
      = link_to_if @report.can_see_client_details?(current_user), pluralize(number_with_delimiter(client_count), 'client'), polymorphic_path(@report.clients_path_array, passed_params.merge(metric: :enrolled_clients)), data: { loads_in_pjax_modal: true }
    .description
      - if client_count != 1
        were enrolled in the
      - else
        was enrolled in the
      - if @filter.project_id.present?
        project
      - else
        projects
      during the reporting period.
      .project-name.text-small.mt-2
        %em= @report.project_names
