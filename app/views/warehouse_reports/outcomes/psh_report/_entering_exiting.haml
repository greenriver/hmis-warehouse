.d-flex.text-center.justify-content-center.mb-6
  .rrh__entered-pre-placement.chunk.pr-4.mr-4
    %h4.title
      #{Translation.translate('Clients Entering Search')}
    %i.icon-arrow-right.metric
    %i.icon-file-text.metric
    .metric
      - client_count = @report.entering_pre_placement.distinct.select(:client_id).count
      = link_to_if @report.can_see_client_details?(current_user), pluralize(number_with_delimiter(client_count), 'client'), polymorphic_path(@report.clients_path_array, passed_params.merge(metric: :entering_pre_placement)), data: { loads_in_pjax_modal: true }
    .description
      #{Translation.translate('entered Search during the reporting period')}.
