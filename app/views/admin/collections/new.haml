- title = "New Collection"
- content_for :title, title

= content_for :crumbs do
  = link_to admin_collections_path do
    &laquo; Manage Collections

.o-page
  .o-page__title
    %h1= content_for :title
= render 'admin/collections/description', entity_type: 'warehouse'
.row
  .col-sm-12
    = simple_form_for @collection, url: admin_collections_path do |f|
      = f.error_notification
      .form-inputs
        = render 'form', f: f

      .form_actions.mt-4
        = f.button :submit, value: 'Create Collection and Choose Entities'
