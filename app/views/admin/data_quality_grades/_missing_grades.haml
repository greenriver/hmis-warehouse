- if @missing_grades.any?
  %table.table.table-condensed
    %thead
      %tr
        %th Grade
        %th Percentage
        - if show_delete
          %th
    %tbody
      - @missing_grades.each do |grade|
        %tr{style: "color: #{grade.color}"}
          %td= grade.grade
          %td
            - if grade.percentage_high.present?
              = "#{grade.percentage_low}% - #{grade.percentage_high}%"
            - else
              = "#{grade.percentage_low}% + "
          - if show_delete
            %td
              = link_to admin_missing_grade_path(grade), method: :delete, class: 'btn btn-secondary' do
                %span.icon-cross
- else
  %p Add some grades above.