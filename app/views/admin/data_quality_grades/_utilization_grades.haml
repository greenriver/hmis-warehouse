- if @utilization_grades.any?
  %table.table.table-condensed
    %thead
      %tr
        %th Grade
        %th Under Capacity Low
        %th Under Capacity High
        %th Over Capacity Low
        %th Over Capacity High
        %th
    %tbody
      - @utilization_grades.each do |grade|
        %tr{style: "color: #{grade.color}"}
          %td= grade.grade
          %td= "#{grade.percentage_under_low}%"
          %td= "#{grade.percentage_under_high}%"
          %td= "#{grade.percentage_over_low}%"
          %td= "#{grade.percentage_over_high}%"
          %td
            = link_to admin_utilization_grade_path(grade), method: :delete, class: 'btn btn-secondary' do
              %span.icon-cross
- else
  %p Add some grades above.