.well.overflow-scroll.text-center
  %h3 Project Descriptor Completeness
  .row
    - if ! @report.hide_beds_and_units
      .col-sm-3
        %h4 Operating Start Date
        %ul.list-unstyled
          - @report.report_projects.preload(:project).each do |p|
            %li
              #{p.project.ProjectName}:
              %strong #{p.operating_start_date || 'blank'}
      .col-sm-3
        %h4 CoC Code
        %ul.list-unstyled
          - @report.report_projects.preload(:project).each do |p|
            %li
              #{p.project.ProjectName}:
              %strong #{p.coc_code || 'blank'}
      .col-sm-3
        %h4 Funder
        %ul.list-unstyled
          - @report.report_projects.preload(:project).each do |p|
            %li
              #{p.project.ProjectName}:
              %strong #{p.funder.presence || 'blank'}
      .col-sm-3
        %h4 Inventory Information Date
        %ul.list-unstyled
          - @report.report_projects.preload(:project).each do |p|
            %li
              #{p.project.ProjectName}:
              %strong #{p.inventory_information_dates.presence || 'blank'}
    - else
      .col-sm-4
        %h4 Operating Start Date
        %ul.list-unstyled
