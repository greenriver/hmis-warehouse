wb = xlsx_package.workbook

wb.add_worksheet(name: 'User Logins') do |sheet|
  title = sheet.styles.add_style(sz: 12, b: true, alignment: {horizontal: :center})

  sheet.add_row(
    [
      'First Name',
      'Last Name',
      'Email',
      'ID',
      'Agency',
      'Last Login',
    ],
    style: title,
  )

  @users.each do |user|
    row = [
      user.first_name,
      user.last_name,
      user.email,
      user.id,
      user.agency.name,
      user.current_sign_in_at,
    ]
    sheet.add_row(row)
  end
end
