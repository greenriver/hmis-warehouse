= render 'projects/project_breadcrumbs'
- content_for :title, "Edit Inventory for #{@project.name} at #{@project.organization.name}"
%h1= content_for :title
= simple_form_for @inventory, as: :inventory, url: inventory_path(@inventory) do |f|
  .row
    .col-sm-6
      = f.input :coc_code_override, input_html: {maxlength: 6}, label: "Override CoC Code, currently: #{@inventory.CoCCode || 'unset'}"
      = f.input :inventory_start_date_override, as: :date_picker, label: "Override Inventory Start Date, currently: #{@inventory.InventoryEndDate || 'unset'}"
      .form-actions
        = f.submit 'Save', class: ['btn', 'btn-primary', 'ml-auto']