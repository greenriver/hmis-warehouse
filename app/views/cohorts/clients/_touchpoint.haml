- content_for :panel_collapse_content_touchpoint do
  = simple_form_for :touchpoints, url: new_cohort_cohort_client_path(@cohort), method: :get do |f|
    = f.error_notification
    .row
      .col-sm-3
        = f.input :start, as: :date_picker, input_html: {value: 1.months.ago.to_date}
      .col-sm-3
        = f.input :end, as: :date_picker, input_html: {value: 1.days.ago.to_date}
      .col-sm-4
        - options = options_from_collection_for_select(available_touchpoints, :last, :first, params[:assessment_id])
        = render 'inputs/select', field_name: 'touchpoints[assessment_id]', label: 'Touch Point', options: options, html_options: { include_blank: 'Select'}

    .panel-footer
      = f.button :submit, value: 'Show'

= render 'common/panel_collapse',
  id: 'touchpoint',
  title: 'Pick from clients with a Touch Point',
  content: '_touchpoint'
