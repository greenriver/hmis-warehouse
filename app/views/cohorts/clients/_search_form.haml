- content_for :panel_collapse_content_search do
  .row
    .col-sm-6
      = simple_form_for :search_form, url: new_cohort_cohort_client_path(@cohort), method: :get do |f|
        .input-group{style: 'margin-bottom: 20px;'}
          = f.input :q, label: false, class: 'form-control', placeholder: 'Search clients...', input_html: { value: @search_string }
          %span.input-group-append
            %button.btn.btn-primary{type: :submit} Search

= render 'common/panel_collapse', id: 'search', title: 'Search clients', content: '_search'
