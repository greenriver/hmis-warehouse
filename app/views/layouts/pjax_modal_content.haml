.modal-header
  .modal-header__titles
    :ruby
      title = yield :modal_title
      subtitle = yield :modal_title_secondary
    - if title.present?
      %h4.modal-title(data-pjax-modal-title)
        = title
    - if subtitle.present?
      %h5.modal-title--secondary(data-pjax-modal-title-secondary)
        = subtitle
  %button.close.pull-right(aria-label="Close" pjax-modal-close type="button")
    %i.modal-icon-close
.modal-body.clearfix
  %div(data-pjax-modal-body)
    = yield
  %div(data-pjax-modal-loading style="display: none;")
    Loading&hellip;
- if content_for?(:modal_footer)
  .modal-footer(data-pjax-modal-footer)
    = yield :modal_footer

= yield :page_js
