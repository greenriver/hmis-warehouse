.border-bottom.mb-4
  %h1= t('.title')
%p= link_to t('.new'), new_oauth_application_path, class: 'btn btn-success'
%p
  - fqdn = ENV.fetch("FQDN", "warehouse.openpath.host")
  - tokens = fqdn.split('.')
  - tokens = [tokens[0], 'superset', tokens[1..]].flatten
  - superset_fqdn = 'https://' + ENV.fetch('SUPERSET_FQDN', tokens.join('.'))
  = link_to superset_fqdn do |
      "« Go to Superset »"   |
    end                      |
%table.table.table-striped
  %thead
    %tr
      %th= t('.name')
      %th= t('.callback_url')
      %th= t('.confidential')
      %th= t('.actions')
      %th
  %tbody
    - @applications.each do |application|
      %tr{id: "application_#{application.id}"}
        %td.align-middle
          = link_to application.name, oauth_application_path(application)
        %td.align-middle
          = simple_format(application.redirect_uri)
        %td.align-middle
          = application.confidential? ? t('doorkeeper.applications.index.confidentiality.yes') : t('doorkeeper.applications.index.confidentiality.no')
        %td.align-middle
          = link_to t('doorkeeper.applications.buttons.edit'), edit_oauth_application_path(application), class: 'btn btn-link'
        %td.align-middle
          = render 'delete_form', application: application
