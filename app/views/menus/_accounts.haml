%ul.o-menu__group.list-unstyled
  - if current_user.present?
    %li.o-menu__item.current_user-name.o-text--semibold
      = current_user.name
  - if can_view_some_secure_files?
    %li.o-menu__item
      = link_to secure_files_path, class: 'o-menu__link' do
        Secure Files
  %li.o-menu__item
    = link_to edit_account_path, class: 'o-menu__link' do
      Edit Account
  -# = current_user.name
  %li.o-menu__item
    = link_to destroy_user_session_path, method: :delete, class: 'o-menu__link' do
      Sign Out
      %i.ml-2{class: "icon-exit"}
