- if can_view_clients? || can_edit_clients? || can_search_window?
  .vsm-group.vsm-group__group-a
    = link_to assigned_clients_path, class: 'vsm-item-link' do
      .vsm-item-link--description 
        = _('My Clients')
    - if can_view_clients? || can_edit_clients?
      = link_to clients_path, class: 'vsm-item-link' do
        .vsm-item-link--description
          = _('Clients')
    - if can_search_window?
      = link_to window_clients_path, class: 'vsm-item-link' do
        .vsm-item-link--description 
          = _('Window into the Warehouse')
    - if can_view_cohorts?
      = link_to cohorts_path, class: 'vsm-item-link' do
        .vsm-item-link--description 
          = _('Cohorts')