- if can_view_or_search_clients_or_window? || can_access_some_cohorts?
  %ul.o-menu__group.list-unstyled
    - if can_manage_all_agencies?
      %li.o-menu__item
        = link_to assigned_all_agencies_path, class: 'o-menu__link' do
          = _('All Assigned Clients')
    - if can_manage_agency?
      %li.o-menu__item
        = link_to assigned_agencies_path, class: 'o-menu__link' do
          = _('My Agency\'s Clients')
    - if can_view_clients? || can_edit_clients? || can_search_window?
      %li.o-menu__item
        = link_to assigned_clients_path, class: 'o-menu__link' do
          = _('My Clients')
    - if can_access_client_search?
      %li.o-menu__item
        = link_to clients_path, class: 'o-menu__link' do
          = _('Clients')
    - if can_access_window_search?
      %li.o-menu__item
        = link_to window_clients_path, class: 'o-menu__link' do
          = _('Window into the Warehouse')
    - if can_manage_cohorts? || can_edit_cohort_clients? || can_edit_assigned_cohorts? || can_view_assigned_cohorts?
      %li.o-menu__item
        = link_to cohorts_path, class: 'o-menu__link' do
          = _('Cohorts')
