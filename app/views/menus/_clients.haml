- if can_manage_all_agencies? || can_manage_agency? || GrdaWarehouse::Config.client_search_available? && current_user.can_access_some_client_search? || can_access_some_cohorts?
  %ul.o-menu__group.list-unstyled
    - if can_manage_all_agencies?
      %li.o-menu__item
        = link_to assigned_all_agencies_path, class: 'o-menu__link' do
          = Translation.translate('All Assigned Clients')
    - if can_manage_agency?
      %li.o-menu__item
        = link_to assigned_agencies_path, class: 'o-menu__link' do
          - if can_view_aggregate_health? || can_view_patients_for_own_agency?
            = Translation.translate('My Agency\'s HMIS Clients')
          - else
            = Translation.translate('My Agency\'s Clients')
    - if GrdaWarehouse::Config.client_search_available? && current_user.can_access_some_client_search?
      - if current_user.user_clients.exists?
        %li.o-menu__item
          = link_to assigned_clients_path, class: 'o-menu__link' do
            - if can_view_aggregate_health? || can_view_patients_for_own_agency?
              = Translation.translate('My HMIS Clients')
            - else
              = Translation.translate('My Clients')
      %li.o-menu__item
        = link_to clients_path, class: 'o-menu__link' do
          = Translation.translate('Client Search')

    - if can_access_some_cohorts?
      %li.o-menu__item
        = link_to cohorts_path, class: 'o-menu__link' do
          = Translation.translate('Cohorts')
    - if RailsDrivers.loaded.include?(:service_scanning) && GrdaWarehouse::Config.get(:service_register_visible) && can_use_service_register?
      %li.o-menu__item
        = link_to service_scanning_services_path, class: 'o-menu__link' do
          = Translation.translate('Scan Card Services')
